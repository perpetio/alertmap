<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/BigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_map" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_for_date" />

            <TextView
                android:id="@+id/tv_refresh_date"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_map_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/calm" />

            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/no_alert" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/alert" />

            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/air_alert" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center">

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/noInfo" />

            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/no_info" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/BigText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_plate_top"
        android:backgroundTint="@color/on_ground"
        android:padding="20dp"
        android:text="@string/settings" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@color/black_transparent"
        android:backgroundTint="@color/on_ground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <CheckBox
                android:id="@+id/chk_auto_update"
                style="@style/BoldText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:checked="true"
                android:text="@string/auto_update" />

            <RadioGroup
                android:id="@+id/rg_repeat_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:weightSum="75">

                <TextView
                    style="@style/MainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/every" />

                <RadioButton
                    android:id="@+id/rb_min_period"
                    style="@style/MainText"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="25"
                    android:text="@string/min" />

                <RadioButton
                    android:id="@+id/rb_middle_period"
                    style="@style/MainText"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="25"
                    android:text="@string/min" />

                <RadioButton
                    android:id="@+id/rb_max_period"
                    style="@style/MainText"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="25"
                    android:text="@string/min" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</LinearLayout>